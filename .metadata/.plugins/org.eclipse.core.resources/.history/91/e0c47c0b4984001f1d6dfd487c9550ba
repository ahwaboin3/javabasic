package c07.poly2;

//Tire를 부품으로 가지는 클래스
public class Car {
	private Tire frontLeftTire=new Tire(6,"앞왼쪽");
	private Tire frontRightTire=new Tire(2,"앞오른쪽");
	private Tire backLeftTire=new Tire(3,"뒤왼쪽");
	private Tire backRightTire=new Tire(4,"뒤오른쪽");
	
	//펑크 났을 때 실행
	public void stop() {
		System.out.println("[자동차가 멈춥니다.]");
	}
	
	public int run() {
		System.out.println("[자동차가 달립니다.]");
	}
	

}







