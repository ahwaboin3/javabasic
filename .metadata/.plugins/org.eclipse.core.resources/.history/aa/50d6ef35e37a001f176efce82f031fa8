package c02;

public class C02_02_03 {
	public static void main(String[] args) {
		//실수 타입
		//소수점이 있는 수를 실수라고 한다
		//타입|메모리 사용 크기
		//float|4byte
		//double|8byte
		
		//실수 리터럴
		//소수점이 있는 숫자는 10진수 실수로 인식합니다
		double d1=0.25;
		double d2=-3.14;
//		d2="str";
		//지수와 가수로 표현된 소수점이 있는 10진수 실수로 인식합니다.
		double d3=5e2;
		
	}

}
